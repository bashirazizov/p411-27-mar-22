@model LoginViewModel
<div class="breadcrumbs">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 col-md-6 col-12">
                <div class="breadcrumbs-content">
                    <h1 class="page-title">Login</h1>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <ul class="breadcrumb-nav">
                    <li><a href="/"><i class="lni lni-home"></i> Home</a></li>
                    <li>Login</li>
                </ul>
            </div>
        </div>
    </div>
</div>


<div class="account-login section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 offset-lg-3 col-md-10 offset-md-1 col-12">
                <form class="card login-form" method="post">
                    <div class="card-body">
                        <div class="title">
                            <h3>Login Now</h3>
                            <div class="small text-danger" asp-validation-summary="ModelOnly"></div>
                        </div>

                        <div class="form-group input-group">
                            <label asp-for="UserName"></label>
                            <input class="form-control" asp-for="UserName">
                            <span class="small text-danger" asp-validation-for="UserName"></span>
                        </div>
                        <div class="form-group input-group">
                            <label asp-for="Password"></label>
                            <input class="form-control" asp-for="Password">
                            <span class="small text-danger" asp-validation-for="Password"></span>
                        </div>
                        <div class="d-flex flex-wrap justify-content-between bottom-content">
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input width-auto" name="keepMeLoggedIn" value="true" checked>
                                <label class="form-check-label">Remember me</label>
                            </div>
                        </div>
                        <div class="button">
                            <button class="btn" type="submit">Login</button>
                        </div>
                        <p class="outer-link">
                            Don't have an account? <a asp-action="Register">Register here </a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>